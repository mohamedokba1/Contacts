@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}
<a asp-controller="Persons" asp-action="Index" class="mt-2"><i class="fa-sharp fa-solid fa-arrow-left fa-2xl"></i></a>
<h3 class="w-50 m-auto">Delete Person</h3>

<div class="w-50 m-auto">
    <form asp-controller="Persons" asp-action="Delete" method="post">
        <input type="hidden" asp-for="PersonId"/>
        <div class="form-group m-3">
            <label class="fw-bold" for="PersonName">Person Name</label>
            <input asp-for="PersonName" class="form-control" disabled>
        </div>
        <div class="form-group m-3">
            <label class="fw-bold" for="Email">Email</label>
            <input asp-for="Email" class="form-control" disabled>
        </div>
        <div class="w-50 m-auto">
            <button type="submit" class="btn btn-danger w-100 mt-4 p-2 fw-bold">Delete</button>
        </div>
    </form>
</div>