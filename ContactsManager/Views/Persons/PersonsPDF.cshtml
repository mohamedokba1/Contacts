@model IEnumerable<PersonResponse>
@{
    Layout = null;
}
@*http://localhost:port/StyleSheet*@
<link href=@("http://"+ Context.Request.Host.ToString() + "/CSS/StyleSheet.css") rel="stylesheet"/>
<link href=@("http://"+ Context.Request.Host.ToString() + "/CSS/bootstrap.min.css") rel="stylesheet"/>
<div class="alert alert-secondary text-center bg-secondary pb-2 pt-2">
    <h1 class="fw-bold p-2">Persons Report</h1>
</div>
<table class="table w-100 margin-top table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Person Name</th>
                <th scope="col">Address</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Age</th>
                <th scope="col">Email</th>
                <th scope="col">Gender</th>
                <th scope="col">Country</th>
                <th scope="col">Receive NewsLetter</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PersonResponse person in Model)
            {
                <tr>
                    <th class="p-2">@person.PersonName</th>
                    <td class="p-2">@person.Address</td>
                    <td class="p-2">@person.DateOfBirth?.ToString("dd MMM yyyy")</td>
                    <td class="p-2">@person.Age</td>
                    <td class="p-2">@person.Email</td>
                    <td class="p-2">@person.PersonGender</td>
                    <td class="p-2">@person.Country</td>
                    <td class="p-2">@person.ReceiveNewsLetter</td>
                </tr>
            }
        </tbody>
</table>