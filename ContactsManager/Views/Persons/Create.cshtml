@model PersonAddRequest
@{
    ViewBag.Title = "Create Person";
}
<a asp-controller="Persons" asp-action="Index" class="mt-2"><i class="fa-sharp fa-solid fa-arrow-left fa-2xl"></i></a>
<h3 class="w-50 m-auto">Create Person</h3>

<div class="w-50 m-auto">
    <form asp-controller="Persons" asp-action="Create" method="post">
        @*<div class="text-danger" asp-validation-summary="All"></div>*@
        <div class="form-group m-3">
            <label class="fw-bold" for="PersonName">Person Name</label>
            <input asp-for="PersonName" type="text" class="form-control" id="PersonName" name="PersonName" placeholder="Enter person name">
            <span class="text-danger" asp-validation-for="PersonName"></span>
        </div>
        <div class="form-group m-3">
            <label class="fw-bold" for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="Email" name="Email" placeholder="name@example.com">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group m-3">
            <label for="DateOfBirth">Date of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control">
            <span class="text-danger" asp-validation-for="DateOfBirth"></span>
        </div>
        <div class="form-group m-3 d-flex">
            <label class="fw-bold" for="Gender">Gender</label>
            <div class="d-flex ms-3">
                <div class="form-check">
                    <input asp-for="PersonGender" type="radio" class="form-check-input" value="Male">
                    <label class="form-check-label" for="Gender">Male</label>
                </div>
                <div class="form-check ms-2">
                    <input asp-for="PersonGender" type="radio" value="Female" class="form-check-input">
                    <label class="form-check-label" for="Gender">Female</label>
                </div>
            </div>
            <span class="ms-2 text-danger" asp-validation-for="PersonGender"></span>
        </div>
       
        <div class="form-group col-md-4 m-3">
            <label class="fw-bold" for="CountryId">Country</label>
            <select name="CountryId" id="CountryId" class="form-control" asp-items="@ViewBag.Countries">
                <option selected>Select Country</option>
            </select>
            <span class="text-danger" asp-validation-for="CountryID"></span>
        </div>
        <div class="form-group m-3">
            <label class="fw-bold" for="Address">Address</label>
            <textarea asp-for="Address" type="text" class="form-control" id="Address" name="Address"></textarea>
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
        <div class="form-check m-3">
            <input asp-for="ReceiveNewsLetter" type="checkbox" class="form-check-input">
            <label class="fw-bold form-check-label" for="ReceiveNewsLetter">Receive NewsLetter</label>
        </div>
        <div class="w-50 m-auto">
            <button type="submit" class="btn btn-primary w-100 p-2 fw-bold">Add</button>
        </div>

        @if(ViewBag.Errors != null)
        {
            <div class="text-danger">
                <ul>
                    @foreach(var error in ViewBag.Errors)
                    {
                       <li class="ms-2">@error</li>
                    }
                </ul>
            </div>
        }
    </form>
</div>

